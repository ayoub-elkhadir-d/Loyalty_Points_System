{% extends 'layouts/base.twig' %}

{% block title %}Dashboard - ShopEasy Loyalty{% endblock %}

{% block content %}
<div class="dashboard">
    <div class="welcome-banner">
        <h1>Welcome, {{ user.name }}!</h1>
        <p>Email: {{ user.email }}</p>
    </div>

    <div class="points-summary">
        <div class="points-card">
            <h2>Your Points Balance</h2>
            <div class="points-display">
                <span class="points-number">{{ currentPoints|number_format }}</span>
                <span class="points-label">POINTS</span>
            </div>
            
            {% if pointsSummary %}
            <div class="points-breakdown">
                <div class="breakdown-item">
                    <span>Total Earned:</span>
                    <span>{{ pointsSummary.total_earned|default(0)|number_format }}</span>
                </div>
                <div class="breakdown-item">
                    <span>Total Redeemed:</span>
                    <span>{{ pointsSummary.total_redeemed|default(0)|number_format }}</span>
                </div>
                {% if pointsSummary.total_expired %}
                <div class="breakdown-item">
                    <span>Total Expired:</span>
                    <span>{{ pointsSummary.total_expired|default(0)|number_format }}</span>
                </div>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>

    <div class="dashboard-grid">
        <div class="recent-transactions">
            <h2>Recent Transactions</h2>
            {% if recentTransactions %}
                <table class="transactions-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>Description</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for transaction in recentTransactions %}
                        <tr class="type-{{ transaction.type }}">
                            <td>{{ transaction.created_at|date('Y-m-d H:i') }}</td>
                            <td>
                                <span class="badge badge-{{ transaction.type }}">
                                    {{ transaction.type|capitalize }}
                                </span>
                            </td>
                            <td class="{{ transaction.amount > 0 ? 'positive' : 'negative' }}">
                                {{ transaction.amount > 0 ? '+' : '' }}{{ transaction.amount }}
                            </td>
                            <td>{{ transaction.description }}</td>
                            <td>{{ transaction.balance_after|number_format }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>No transactions yet.</p>
            {% endif %}
            <a href="/points/history" class="btn">View All Transactions</a>
        </div>

        <div class="available-rewards">
            <h2>Available Rewards</h2>
            <div class="rewards-grid">
                {% for reward in availableRewards %}
                <div class="reward-card">
                    <h3>{{ reward.name }}</h3>
                    <p class="points-required">{{ reward.points_required|number_format }} points</p>
                    <p class="reward-description">{{ reward.description }}</p>
                    {% if reward.stock >= 0 %}
                        <p class="stock">Stock: {{ reward.stock }}</p>
                    {% endif %}
                    
                    <div class="reward-actions">
                        {% if currentPoints >= reward.points_required %}
                            <a href="/rewards/redeem/{{ reward.id }}" class="btn btn-primary">
                                Redeem Now
                            </a>
                        {% else %}
                            <button class="btn btn-disabled" disabled>
                                Need {{ (reward.points_required - currentPoints)|number_format }} more points
                            </button>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
            </div>
            <a href="/rewards" class="btn">View All Rewards</a>
        </div>
    </div>
</div>
{% endblock %}