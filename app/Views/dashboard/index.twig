{% extends 'layouts/base.twig' %}

{% block title %}Dashboard - ShopEasy Loyalty{% endblock %}

{% block content %}
<div class="dashboard-container">
    <h1>Welcome, {{ user_name }}!</h1>
    
    <div class="points-card">
        <h2>{{ total_points|number_format }} Points</h2>
        <p>Your current balance</p>
    </div>
    
    {% if session.success %}
        <div class="alert alert-success">
            {{ session.success }}
        </div>
    {% endif %}
    
    {% if session.error %}
        <div class="alert alert-error">
            {{ session.error }}
        </div>
    {% endif %}
    
    {% if stats %}
    <div class="stats-grid">
        <div class="stat-card">
            <h3>Total Earned</h3>
            <p>{{ stats.total_earned|default(0)|number_format }} pts</p>
        </div>
        <div class="stat-card">
            <h3>Total Redeemed</h3>
            <p>{{ stats.total_redeemed|default(0)|number_format }} pts</p>
        </div>
    </div>
    {% endif %}
    
    <div class="actions">
        <a href="/shopeasy-loyalty/public/rewards" class="btn btn-primary">Browse Rewards</a>
        <a href="/shopeasy-loyalty/public/points/history" class="btn btn-secondary">View Points History</a>
    </div>
    
    {% if transactions %}
    <div class="recent-transactions">
        <h3>Recent Transactions</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Balance</th>
                </tr>
            </thead>
            <tbody>
                {% for transaction in transactions %}
                <tr>
                    <td>{{ transaction.created_at|date('Y-m-d') }}</td>
                    <td>
                        {% if transaction.type == 'earned' %}
                            <span style="color: green;">Earned</span>
                        {% elseif transaction.type == 'redeemed' %}
                            <span style="color: red;">Redeemed</span>
                        {% else %}
                            {{ transaction.type|capitalize }}
                        {% endif %}
                    </td>
                    <td>{{ transaction.amount }} pts</td>
                    <td>{{ transaction.description }}</td>
                    <td>{{ transaction.balance_after }} pts</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
</div>

<style>
.dashboard-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px;
}

.points-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 10px;
    padding: 40px;
    text-align: center;
    margin: 30px 0;
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
}

.points-card h2 {
    font-size: 3rem;
    margin: 0;
}

.points-card p {
    font-size: 1.2rem;
    opacity: 0.9;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin: 30px 0;
}

.stat-card {
    background: white;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 20px;
    text-align: center;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
}

.stat-card h3 {
    margin: 0 0 10px 0;
    color: #666;
    font-size: 1rem;
}

.stat-card p {
    margin: 0;
    font-size: 1.5rem;
    font-weight: bold;
    color: #333;
}

.actions {
    display: flex;
    gap: 15px;
    margin: 30px 0;
}

.recent-transactions {
    margin-top: 40px;
}

.alert {
    padding: 15px;
    border-radius: 5px;
    margin: 20px 0;
}

.alert-success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.alert-error {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}
</style>

<script>
// Clear flash messages after 5 seconds
setTimeout(function() {
    var alerts = document.querySelectorAll('.alert');
    alerts.forEach(function(alert) {
        alert.style.display = 'none';
    });
}, 5000);
</script>
{% endblock %}