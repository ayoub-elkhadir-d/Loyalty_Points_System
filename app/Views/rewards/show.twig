{% extends 'layouts/base.twig' %}

{% block title %}{{ reward.name }} - ShopEasy Loyalty{% endblock %}

{% block content %}
<div class="reward-detail-container">
    <div class="breadcrumb">
        <a href="/rewards">Rewards</a> &rsaquo; {{ reward.name }}
    </div>
    
    {% if session.error %}
        <div class="alert alert-error">
            {{ session.error }}
        </div>
    {% endif %}
    
    <div class="reward-detail-card">
        <div class="reward-main-info">
            <div class="reward-image-placeholder">
                <div class="image-icon">üèÜ</div>
            </div>
            
            <div class="reward-info">
                <h1>{{ reward.name }}</h1>
                <div class="points-display-large">
                    <span class="points-label">Price:</span>
                    <span class="points-value">{{ reward.points_required|number_format }} points</span>
                </div>
                
                <div class="stock-status">
                    {% if reward.stock == -1 %}
                        <span class="status available">‚úì Available</span>
                    {% elseif reward.stock > 0 %}
                        <span class="status available">‚úì {{ reward.stock }} available</span>
                    {% else %}
                        <span class="status unavailable">‚úó Out of stock</span>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="reward-description-section">
            <h2>Description</h2>
            <p>{{ reward.description }}</p>
        </div>
        
        <div class="points-comparison">
            <h2>Points Comparison</h2>
            <div class="comparison-grid">
                <div class="comparison-item">
                    <div class="comparison-label">Required Points</div>
                    <div class="comparison-value required">{{ reward.points_required|number_format }}</div>
                </div>
                
                <div class="comparison-item">
                    <div class="comparison-label">Your Points</div>
                    <div class="comparison-value {% if user_points >= reward.points_required %}enough{% else %}not-enough{% endif %}">
                        {{ user_points|number_format }}
                    </div>
                </div>
                
                <div class="comparison-item">
                    <div class="comparison-label">Difference</div>
                    <div class="comparison-value {% if user_points >= reward.points_required %}enough{% else %}not-enough{% endif %}">
                        {% if user_points >= reward.points_required %}
                            +{{ (user_points - reward.points_required)|number_format }}
                        {% else %}
                            -{{ (reward.points_required - user_points)|number_format }}
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <div class="points-bar">
                <div class="bar-background">
                    <div class="bar-fill" style="width: {% if user_points >= reward.points_required %}100{% else %}{{ (user_points / reward.points_required * 100)|round(0) }}{% endif %}%"></div>
                </div>
                <div class="bar-labels">
                    <span>0</span>
                    <span>{{ reward.points_required|number_format }}</span>
                </div>
            </div>
        </div>
        
        <div class="redemption-section">
            {% if reward.stock != 0 %}
                {% if user_points >= reward.points_required %}
                    <div class="can-redeem-box">
                        <div class="success-message">
                            <h3>üéâ Congratulations!</h3>
                            <p>You have enough points to redeem this reward.</p>
                        </div>
                        
                        <div class="redemption-summary">
                            <div class="summary-item">
                                <span class="summary-label">Current Points:</span>
                                <span class="summary-value">{{ user_points|number_format }}</span>
                            </div>
                            <div class="summary-item">
                                <span class="summary-label">Points to Deduct:</span>
                                <span class="summary-value deduct">-{{ reward.points_required|number_format }}</span>
                            </div>
                            <div class="summary-item total">
                                <span class="summary-label">Remaining Points:</span>
                                <span class="summary-value">{{ (user_points - reward.points_required)|number_format }}</span>
                            </div>
                        </div>
                        
                        <div class="warning-notice">
                            <p><strong>‚ö†Ô∏è Important:</strong> This action cannot be undone. Points will be deducted immediately.</p>
                        </div>
                        
                        <div class="action-buttons-large">
    
                               <form action="/shopeasy-loyalty/public/rewards/redeem/{{ reward.id }}" method="POST" style="flex: 1;">
                        
                                    <button type="submit" class="btn btn-redeem-large" onclick="return confirm('Are you sure you want to redeem this reward?')">
                                        Redeem Now
                                    </button>
                                </form>
                           
                            <a href="/shopeasy-loyalty/public/rewards" class="btn btn-back">
                                Back to Rewards
                            </a>


                        </div>
                    </div>
                {% else %}
                    <div class="cannot-redeem-box">
                        <div class="error-message">
                            <h3>‚ö†Ô∏è Not Enough Points</h3>
                            <p>You need <strong>{{ (reward.points_required - user_points)|number_format }}</strong> more points to redeem this reward.</p>
                        </div>
                        
                        <div class="suggestions">
                            <h4>How to earn more points:</h4>
                            <ul>
                                <li>Make purchases on ShopEasy (10 points per $100 spent)</li>
                                <li>Complete your profile for bonus points</li>
                                <li>Participate in special promotions</li>
                                <li>Check back daily for bonus opportunities</li>
                            </ul>
                        </div>
                        
                        <div class="action-buttons-large">
                            <a href="/rewards/affordable" class="btn btn-primary">
                                View Affordable Rewards
                            </a>
                            <a href="/shopeasy-loyalty/public/rewards" class="btn btn-secondary">
                                Back to All Rewards
                            </a>
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <div class="out-of-stock-box">
                    <div class="error-message">
                        <h3>üì¶ Out of Stock</h3>
                        <p>This reward is currently unavailable.</p>
                    </div>
                    
                    <div class="suggestions">
                        <h4>What you can do:</h4>
                        <ul>
                            <li>Check back later - stock is updated regularly</li>
                            <li>Browse other available rewards</li>
                            <li>Contact support for more information</li>
                        </ul>
                    </div>
                    
                    <div class="action-buttons-large">
                        <a href="/rewards" class="btn btn-primary">
                            Browse Other Rewards
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
