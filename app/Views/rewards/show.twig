    padding: 30px;
    border-bottom: 1px solid #dee2e6;
}

.points-comparison h2 {
    margin: 0 0 20px 0;
    color: #333;
}

.comparison-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
