        flex-direction: column;
    }
    
    .reward-info h1 {
        font-size: 1.5rem;
    }
    
    .points-display-large {
        justify-content: center;
    }
}
</style>

<script>
// Clear error messages after 5 seconds
setTimeout(function() {
    var alerts = document.querySelectorAll('.alert');
    alerts.forEach(function(alert) {
        alert.style.display = 'none';
    });
}, 5000);
</script>
{% endblock %}