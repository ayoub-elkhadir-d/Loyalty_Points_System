}

.comparison-item {
    text-align: center;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 8px;
    border: 1px solid #dee2e6;
}

.comparison-label {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 10px;
