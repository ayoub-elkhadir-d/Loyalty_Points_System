    padding: 6px 15px;
    border-radius: 15px;
    font-size: 0.9rem;
    font-weight: bold;
    display: inline-block;
}

.status.available {
    background: rgba(255,255,255,0.2);
}

.status.unavailable {
    background: rgba(255,255,255,0.1);
}

