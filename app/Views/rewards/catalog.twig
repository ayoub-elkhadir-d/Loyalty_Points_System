{% extends 'layouts/base.twig' %}

{% block title %}Rewards Catalog - ShopEasy Loyalty{% endblock %}

{% block content %}
<div class="rewards-container">
    <h1>Rewards Catalog</h1>
    
    <div class="user-points-info">
        <div class="points-display">
            <span class="points-label">Your Points:</span>
            <span class="points-value">{{ user_points|number_format }} points</span>
        </div>
        
        <div class="filter-options">
            <a href="/rewards" class="filter-btn {% if filter != 'affordable' %}active{% endif %}">
                All Rewards
            </a>
            <a href="/rewards/affordable" class="filter-btn {% if filter == 'affordable' %}active{% endif %}">
                Affordable Rewards
            </a>
        </div>
    </div>
    
    {% if session.success %}
        <div class="alert alert-success">
            {{ session.success }}
        </div>
    {% endif %}
    
    {% if session.error %}
        <div class="alert alert-error">
            {{ session.error }}
        </div>
    {% endif %}
    
    {% if rewards|length > 0 %}
        <div class="rewards-grid">
            {% for reward in rewards %}
            <div class="reward-card">
                <div class="reward-header">
                    <h3>{{ reward.name }}</h3>
                    <div class="points-badge">{{ reward.points_required|number_format }} pts</div>
                </div>
                
                <div class="reward-body">
                    <div class="reward-description">
                        <p>{{ reward.description }}</p>
                    </div>
                    
                    <div class="reward-details">
                        <div class="detail-row">
                            <span class="detail-label">Status:</span>
                            <span class="detail-value">
                                {% if reward.stock == -1 %}
                                    <span class="status available">Available</span>
                                {% elseif reward.stock > 0 %}
                                    <span class="status available">{{ reward.stock }} left</span>
                                {% else %}
                                    <span class="status unavailable">Out of stock</span>
                                {% endif %}
                            </span>
                        </div>
                        
                        <div class="detail-row">
                            <span class="detail-label">Your points:</span>
                            <span class="detail-value {% if user_points >= reward.points_required %}enough{% else %}not-enough{% endif %}">
                                {{ user_points|number_format }}
                            </span>
                        </div>
                        
                        {% if user_points < reward.points_required %}
                        <div class="detail-row">
                            <span class="detail-label">Need more:</span>
                            <span class="detail-value need-more">
                                {{ (reward.points_required - user_points)|number_format }} pts
                            </span>
                        </div>
                        {% endif %}
                    </div>
                </div>
                
                <div class="reward-footer">
                    {% if reward.stock != 0 %}
                        {% if user_points >= reward.points_required %}
                        
                            <div class="action-buttons">

                                <form action="/shopeasy-loyalty/public/rewards/redeem/{{ reward.id }}" method="POST" style="flex: 1;">
                                    <input type="hidden" name="confirmation" value="on">
                                    
                                    <button type="submit" class="btn btn-redeem" onclick="return confirm('Are you sure you want to redeem this reward?')">
                                        Redeem Now
                                    </button>
                                </form>
                                
                                <a href="/shopeasy-loyalty/public/rewards/show/{{ reward.id }}" class="btn btn-details">
                                    Details
                                </a>
                            </div>
                        {% else %}
                            <div class="cannot-redeem">
                                <p>Not enough points</p>
                                <a href="/shopeasy-loyalty/public/rewards/show/{{ reward.id }}" class="btn btn-details">
                                    View Details
                                </a>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="out-of-stock">
                            <p>Currently unavailable</p>
                            <a href="/shopeasy-loyalty/public/rewards/show/{{ reward.id }}" class="btn btn-details">
                                View Details
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="no-rewards">
            <div class="empty-state">
                <h3>No rewards found</h3>
                {% if filter == 'affordable' %}
                    <p>You don't have enough points for any rewards yet.</p>
                    <p>Keep shopping to earn more points!</p>
                    <a href="/shopeasy-loyalty/public/rewards" class="btn btn-primary">View All Rewards</a>
                {% else %}
                    <p>No rewards are currently available.</p>
                    <p>Please check back later.</p>
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>

<style>
.rewards-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

h1 {
    color: #333;
    text-align: center;
    margin-bottom: 30px;
}

.user-points-info {
    background: #f8f9fa;
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1px solid #dee2e6;
}

.points-display {
    display: flex;
    align-items: center;
    gap: 10px;
}

.points-label {
    color: #666;
    font-size: 1.1rem;
}

.points-value {
    background: #28a745;
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-weight: bold;
    font-size: 1.2rem;
}

.filter-options {
    display: flex;
    gap: 10px;
}

.filter-btn {
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    color: #666;
    border: 1px solid #ddd;
    background: white;
    transition: all 0.3s;
}

.filter-btn:hover {
    background: #f8f9fa;
}

.filter-btn.active {
    background: #007bff;
    color: white;
    border-color: #007bff;
}

.alert {
    padding: 15px;
    border-radius: 5px;
    margin-bottom: 20px;
}

.alert-success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.alert-error {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

.rewards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
    margin-top: 20px;
}

.reward-card {
    background: white;
    border: 1px solid #dee2e6;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 3px 10px rgba(0,0,0,0.08);
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    flex-direction: column;
}

.reward-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 20px rgba(0,0,0,0.12);
}

.reward-header {
    background: #007bff;
    color: white;
    padding: 20px;
    position: relative;
}

.reward-header h3 {
    margin: 0;
    font-size: 1.3rem;
    padding-right: 70px;
}

.points-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background: white;
    color: #007bff;
    padding: 5px 12px;
    border-radius: 15px;
    font-weight: bold;
    font-size: 0.9rem;
}

.reward-body {
    padding: 20px;
    flex-grow: 1;
}

.reward-description {
    margin-bottom: 20px;
}

.reward-description p {
    margin: 0;
    color: #555;
    line-height: 1.5;
    font-size: 0.95rem;
}

.reward-details {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 15px;
}

.detail-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    padding-bottom: 10px;
    border-bottom: 1px dashed #dee2e6;
}

.detail-row:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
}

.detail-label {
    color: #666;
    font-size: 0.9rem;
}

.detail-value {
    font-weight: bold;
    font-size: 0.95rem;
}

.detail-value.enough {
    color: #28a745;
}

.detail-value.not-enough {
    color: #dc3545;
}

.detail-value.need-more {
    color: #dc3545;
}

.status {
    padding: 3px 10px;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: bold;
}

.status.available {
    background: #d4edda;
    color: #155724;
}

.status.unavailable {
    background: #f8d7da;
    color: #721c24;
}

.reward-footer {
    padding: 20px;
    border-top: 1px solid #dee2e6;
    background: #f8f9fa;
}

.action-buttons {
    display: flex;
    gap: 10px;
}

.btn {
    display: inline-block;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    text-align: center;
    font-size: 0.9rem;
    cursor: pointer;
    transition: background 0.3s;
    flex: 1;
}

.btn-redeem {
    background: #28a745;
    color: white;
}

.btn-redeem:hover {
    background: #1e7e34;
}

.btn-details {
    background: #6c757d;
    color: white;
}

.btn-details:hover {
    background: #545b62;
}

.btn-primary {
    background: #007bff;
    color: white;
    padding: 12px 24px;
}

.btn-primary:hover {
    background: #0056b3;
}

.cannot-redeem,
.out-of-stock {
    text-align: center;
}

.cannot-redeem p,
.out-of-stock p {
    margin: 0 0 10px 0;
    color: #dc3545;
    font-weight: bold;
}

.out-of-stock p {
    color: #6c757d;
}

.no-rewards {
    grid-column: 1 / -1;
    text-align: center;
    padding: 50px 20px;
}

.empty-state {
    background: #f8f9fa;
    border-radius: 10px;
    padding: 40px;
    border: 1px dashed #dee2e6;
}

.empty-state h3 {
    color: #666;
    margin-bottom: 15px;
}

.empty-state p {
    color: #888;
    margin-bottom: 10px;
}

@media (max-width: 768px) {
    .user-points-info {
        flex-direction: column;
        gap: 15px;
        text-align: center;
    }
    
    .filter-options {
        width: 100%;
        justify-content: center;
    }
    
    .rewards-grid {
        grid-template-columns: 1fr;
    }
}
</style>

<script>

setTimeout(function() {
    var alerts = document.querySelectorAll('.alert');
    alerts.forEach(function(alert) {
        alert.style.display = 'none';
    });
}, 5000);
</script>
{% endblock %}