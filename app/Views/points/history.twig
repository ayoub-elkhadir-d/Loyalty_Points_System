{% extends 'layouts/base.twig' %}

{% block title %}Points History - ShopEasy Loyalty{% endblock %}

{% block content %}
<div class="history-container">
    <h1>Points Transaction History</h1>
    
    {% if transactions %}
        <div class="filters">
            <label for="filter-type">Filter by type:</label>
            <select id="filter-type" class="filter-select">
                <option value="all">All</option>
                <option value="earned">Earned</option>
                <option value="redeemed">Redeemed</option>
                <option value="expired">Expired</option>
            </select>
        </div>
        
        <table class="history-table">
            <thead>
                <tr>
                    <th>Date & Time</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Balance After</th>
                </tr>
            </thead>
            <tbody>
                {% for transaction in transactions %}
                <tr data-type="{{ transaction.type }}">
                    <td>{{ transaction.created_at|date('Y-m-d H:i:s') }}</td>
                    <td>
                        <span class="badge badge-{{ transaction.type }}">
                            {{ transaction.type|capitalize }}
                        </span>
                    </td>
                    <td class="amount {{ transaction.amount > 0 ? 'positive' : 'negative' }}">
                        {{ transaction.amount > 0 ? '+' : '' }}{{ transaction.amount }}
                    </td>
                    <td>{{ transaction.description }}</td>
                    <td>{{ transaction.balance_after|number_format }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        
        <div class="history-summary">
            <h3>Summary</h3>
            <div class="summary-cards">
                <div class="summary-card earned">
                    <h4>Total Earned</h4>
                    <p>{{ transactions|filter(t => t.type == 'earned')|map(t => t.amount)|sum|number_format }}</p>
                </div>
                <div class="summary-card redeemed">
                    <h4>Total Redeemed</h4>
                    <p>{{ transactions|filter(t => t.type == 'redeemed')|map(t => t.amount)|sum|abs|number_format }}</p>
                </div>
            </div>
        </div>
    {% else %}
        <div class="empty-state">
            <p>No transaction history yet.</p>
            <p>Make a purchase to start earning points!</p>
        </div>
    {% endif %}
</div>

<script>
document.getElementById('filter-type').addEventListener('change', function() {
    const filterValue = this.value;
    const rows = document.querySelectorAll('.history-table tbody tr');
    
    rows.forEach(row => {
        if (filterValue === 'all' || row.dataset.type === filterValue) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    });
});
</script>
{% endblock %}