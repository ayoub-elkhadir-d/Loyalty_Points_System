RewriteEngine On

# Ensure we are looking relative to the public folder
RewriteBase /shopeasy-loyalty/public/

# Don't rewrite if the file or directory exists (for CSS/JS)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Send everything else to index.php
RewriteRule ^(.*)$ index.php [L,QSA]